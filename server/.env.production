# Production Environment Variables
NODE_ENV=production

# JWT Keys (Use strong keys in production)
JWT_BUYER_KEY=your-strong-buyer-key-here
JWT_ADMIN_KEY=your-strong-admin-key-here
JWT_VENDOR_KEY=your-strong-vendor-key-here
JWT_SECRET=your-strong-jwt-secret-here

# Database
DBKEY=your-production-mongodb-connection-string

# Server
PORT=8001

# Email Configuration
EMAIL_SENDER=your-production-email@domain.com
EMAIL_PASSWORD=your-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@domain.com
SMTP_PASS=your-app-password

# Payment Gateway
RPKEYID=your-production-razorpay-key
RPSECRETKEY=your-production-razorpay-secret

# SMS Configuration
SMS_BASE_URL=http://bulksms.promotionkart.com/api/SmsApi/SendSingleApi?
SMS_USER_ID=your-sms-user-id
SMS_PASSWORD=your-sms-password
SMS_SENDER_ID=your-sender-id
SMS_ENTITY_ID=your-entity-id
SMS_TEMPLATE_ID=your-template-id

# Security
SESSION_SECRET=your-strong-session-secret
CORS_ORIGIN=https://yourdomain.com